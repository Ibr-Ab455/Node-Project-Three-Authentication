generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}


model Owner {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  created    DateTime   @default(now())
  updated    DateTime   @default(now())

 author   Author[]
}


model Author {
  id        Int      @id @default(autoincrement())
  name      String
  created   DateTime @default(now())
  updated   DateTime @default(now())
 
   owner     Owner     @relation(fields: [ownerId], references: [id])
   ownerId   Int       @map("owner_id")

   book  Book[]
 
}

model Book {
  id           Int         @id @default(autoincrement())
  title         String
  price        Float
  image        String
  created      DateTime    @default(now())
  updated      DateTime    @default(now())

  author  Author @relation(fields: [authId], references: [id])
  authId   Int       @map("auth_id")

  bookstore Bookstore[]
  
  }



model Bookstore {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  created   DateTime @default(now())
  updated   DateTime @default(now())

  books    Book @relation(fields: [bookId], references: [id])
  bookId   Int       @map("book_id")
}



